                td
                    span(style='display: block; color: #82999c; font-weight: 400;font-size: 14px; line-height: 18px; padding-bottom: 25px; text-align: left;') Buyer
                td
                    span(style='display: block; color: #000000; font-weight: 400;font-size: 14px; line-height: 18px; padding-bottom: 25px; text-align: right;') Ivanov Ivan #[br] (0XX)XXX-XX-XX
