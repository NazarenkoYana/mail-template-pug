include mixins/header
include mixins/footer

doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
        meta(http-equiv='X-UA-Compatible' content='ie=edge')
        title
            block title
    body(style="background-color: #F4F4F4; font-size: 14px; margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';")
        span(style='display: block; margin: 0 auto; max-width: 580px; background-color: white;')
            +header()
                block title

            span(style='padding: 30px; display: block;')
                block content

            +footer()
